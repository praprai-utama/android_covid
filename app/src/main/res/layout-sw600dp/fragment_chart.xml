<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:segmentedgroup="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#252934"
    android:orientation="vertical"
    tools:context=".ChartFragment">

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/chart"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="25dp" />

    <info.hoang8f.android.segmented.SegmentedGroup
        android:id="@+id/segmented_chart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="40dp"
        android:orientation="horizontal"
        segmentedgroup:sc_border_width="2dp"
        segmentedgroup:sc_checked_text_color="#ff0000"
        segmentedgroup:sc_corner_radius="10dp">

        <RadioButton
            android:id="@+id/segmented_sliver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:minWidth="70dp"
            android:minHeight="33dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="Sliver"
            android:textAllCaps="true" />

        <RadioButton
            android:id="@+id/segmented_gold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:minWidth="70dp"
            android:minHeight="33dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="Gold"
            android:textAllCaps="true" />

        <RadioButton
            android:id="@+id/segmented_platinum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:minWidth="70dp"
            android:minHeight="33dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="Platinum"
            android:textAllCaps="true" />

    </info.hoang8f.android.segmented.SegmentedGroup>


</LinearLayout>